pipeline {
    agent any

    // Use NodeJS tool configured in Jenkins
    tools {
        nodejs 'NodeJS_20'  // This is the name you gave in Jenkins Global Tool Config
    }

    environment {
        APP_DIR = "${WORKSPACE}"   // Jenkins workspace directory
    }

    stages {

        stage('Checkout') {
            steps {
                // Checkout from GitHub
                git branch: 'main', url: 'https://github.com/viji2553-crypto/newmyapp.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Run npm install in workspace
                dir("${APP_DIR}") {
                    sh 'npm install'
                }
            }
        }

        stage('Test') {
            steps {
                dir("${APP_DIR}") {
                    // Replace this with real tests later
                    sh 'echo "No tests yet"'
                }
            }
        }

        stage('Start App (PM2)') {
            steps {
                dir("${APP_DIR}") {
                    // Start your app using PM2
                    sh '''
                    pm2 delete myapp || true
                    pm2 start app.js --name myapp
                    pm2 save
                    '''
                }
            }
        }

    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs.'
        }
    }
}
