pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/viji2553-crypto/newmyapp.git', credentialsId: 'githubcrede'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test' // if you added test
            }
        }
        stage('Start/Restart App (PM2)') {
            steps {
                sh 'pm2 restart app || pm2 start app.js --name app'
            }
        }
    }
}
